.mypage-main
  .mypage-wrapper
    = render "shared/side_bar"
    .credit-main
      -# .credit-wrapper
      %h2.credit-heading クレジットカード情報入力
      .credit-containar
        = form_tag("#", method: :post, id: 'charge-form',  name: "inputForm") do
          .credit-namber
            %label.credit-contents カード番号
            %label.Mandatory 必須
            %br
            = text_field_tag "number", "", class: "credit-namber__area", placeholder: "  半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
            %br
            = image_tag "creditcard-brand.png", size:"150x33"
          .credit-expiration
            %label.credit-contents 有効期限
            %label.Mandatory 必須
            %br
            .credit-expiration__area
              %select.credit-expiration__area--month#exp_month{name: "exp_month", type: "text"}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %span 月
              %select.credit-expiration__area--year#exp_year{name: "exp_year", type: "text"}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %span 年
            %br
          .credit-security
            %label.credit-contents セキュリティコード
            %label.Mandatory 必須
            %br
            = text_field_tag "cvc", "", class: "credit-security__area", placeholder: "  カード背面3~4桁の番号", maxlength: "4", id: "cvc" 
            #card_token
            = submit_tag "追加する", class: "credit_submit"