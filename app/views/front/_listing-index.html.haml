.pickup-container
  .pickup-container__title
    ピックアップカテゴリー
    .pickup-container__product
      = link_to "新規投稿商品", "#", class:"product__head"
      .pickup-container__product__item
        - @items.last(5).each do |item|
          .pickup-container__product__item__image
            = link_to item_path(item.id) do
              - item.item_images.first(1).each do |i|
                = image_tag i.image.url, class:"item-image"
              .pickup-container__product__item__body
                .pickup-container__product__item__body__title
                  = item.name
                  .pickup-container__product__item__body__text
                    %ul 
                      %li
                        = item.price
                      %li
                        ★ 1
                  .pickup-container__product__item__body__tax
                    (税込)
